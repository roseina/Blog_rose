
<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">


    <!-- Left side column. contains the logo and sidebar -->


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->


      <!-- Main content -->
      <section class="content">
        <div class="row">
          <div class="col-xs-12">
            <div class="box">
              <div class="box-header">
                <h3 class="box-title">All Articles</h3>

                <div class="box-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                   <span  class="label label-info"> <%= link_to "Add new", new_admin_article_path %>  </span>

                 </div>
               </div>
             </div>
             <!-- /.box-header -->
             <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tbody><tr>
                  <th>ID</th>
                  <th>Image</th>
                  <th>Title</th>
                  <th>Short Description</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
                <% @articles.each do |article| %>

                <tr>
                  <% a=1 %>

                  <td><%= a %></td>

                  <td>
                    <% if article.image.exists?%>
                    <%= image_tag article.image.url(:thumb) %><br/>
                  <% else %>
                    <p>
                      No image available!
                    </p>
                    <% end %>
                  
                </td>
                <td><%= article.title%></td>
                <td><%=article.short_desc %></td>
                <td><span class="label label-success"><%= article.status%></span></td>
                <td><span class="label label-info"> <%= link_to "Edit", admin_article_path(article) %></span>
                 <span class="label label-danger"><%=link_to "Delete", admin_article%></span>
               </td>
             </tr>
             <% end %>
           </tbody></table>
         </div>
         <!-- /.box-body -->
       </div>
       <!-- /.box -->
     </div>
   </div>

 </section>
 <!-- /.content -->
</div>
<!-- /.content-wrapper -->

